@model ProyectoWeb2.Models.estado_empresa
@{
    ViewBag.Title = (Model.estado_empresa_id > 0 ? Model.nombre : "Nuevo Registro");
}

<h2>Agregar</h2>
<ol class="breadcrumb">
    <li><a href="~/estado_empresa">Estado Empresa</a></li>
    <li class="active">@(Model.estado_empresa_id > 0 ? Model.nombre : "Nuevo Registro")</li>
</ol>

@using (Html.BeginForm("Guardar", "estado_empresa", FormMethod.Post, new
{
    id = "frm-categoria"

}))
{
    @Html.HiddenFor(x => x.estado_empresa_id)
    <div class="panel panel-default">
        <div class="panel-heading">Informacion de la Categoria</div>
        <div class="panel-body">
            <div class="form-group">
                @Html.Label("ID:")
                @Html.TextBoxFor(x => x.estado_empresa_id, new { @class = "form-control", disabled = true })
            </div>
            <div class="form-group">
                @Html.Label("Nombre:")
                @Html.TextBoxFor(x => x.nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.nombre, null, new { @class = "label label-danger" })
            </div>           
        </div>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Grabar</button>
        <a href="~/estado_empresa" class="btn btn-danger">Cancelar</a>
    </div>

}

@model List<ProyectoWeb2.Models.plato_categoria>
@{
    ViewBag.Title = "Index";
}

<h2 class="page-header"><a href="~/plato_categoria/Agregar" class="btn btn-default pull right">Nuevo Categoria Plato </a>Categoria Plato</h2>


@using (Html.BeginForm("Index", "plato_categoria", FormMethod.Post, new { criterio = "frm-buscar" }))

{
    <div class="text-left">
        @Html.Label("Buscar:")
        @Html.TextBox("Criterio")
        <button type="submit" class="btn btn-info" value="Buscar">Buscar</button>
    </div>
}
<table id="ejemplo2" class="table">
    <thead>
        <tr>
            <th style="width:50px">ID</th>
            <th style="width:50px">Nombre</th>           
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@(item.plato_categoria_id)</th>
                <th>@(item.nombre)</th>              
                <th style="align-content:center;">
                    <a href="~/plato_categoria/ver/@item.plato_categoria_id" class="btn btn-info">Ver detalles</a>
                    <a href="~/plato_categoria/Agregar/@item.plato_categoria_id" class="btn btn-warning">Modificar</a>
                    <a href="~/plato_categoria/eliminar/@item.plato_categoria_id" class="btn btn-danger" onclick="return confirm('¿Esta seguro de eliminar el registro?');">Eliminar</a>
                </th>
            </tr>
        }
    </tbody>
</table>
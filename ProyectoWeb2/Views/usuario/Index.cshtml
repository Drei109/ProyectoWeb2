@model List<ProyectoWeb2.Models.usuario>
@{
    ViewBag.Title = "Index";
}

<h2 class="page-header"><a href="~/usuario/Agregar" class="btn btn-default pull right">Nuevo Usuario </a>Usuario</h2>


@using (Html.BeginForm("Index", "usuario", FormMethod.Post, new { criterio = "frm-buscar" }))

{
    <div class="text-left">
        @Html.Label("Buscar:")
        @Html.TextBox("Criterio")
        <button type="submit" class="btn btn-info" value="Buscar">Buscar</button>
    </div>
}
<table id="ejemplo2" class="table">
    <thead>
        <tr>
            <th style="width:50px">ID</th>
            <th style="width:50px">Usuario</th>
            <th style="width:50px">Nombre</th>    
            <th style="width:50px">Estado</th>   
            <th style="width:50px">Tipo</th>    
                   
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@(item.usuario_id)</th>
                <th>@(item.usuario1)</th>
                <th>@(item.nombre)</th>
                <th>@(item.estado_usuario.nombre)</th>
                <th>@(item.usuario_tipo.descripcion)</th>             
                <th style="align-content:center;">
                    <a href="~/usuario/ver/@item.usuario_id" class="btn btn-info">Ver detalles</a>
                    <a href="~/usuario/Agregar/@item.usuario_id" class="btn btn-warning">Modificar</a>
                    <a href="~/usuario/eliminar/@item.usuario_id" class="btn btn-danger" onclick="return confirm('¿Esta seguro de eliminar el registro?');">Eliminar</a>
                </th>
            </tr>
        }
    </tbody>
</table>
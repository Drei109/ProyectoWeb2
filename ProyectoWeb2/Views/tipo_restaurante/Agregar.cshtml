@model ProyectoWeb2.Models.tipo_restaurante
@{
    ViewBag.Title = (Model.tipo_restaurante_id > 0 ? Model.descripcion : "Nuevo Registro");
}

<h2>Agregar</h2>
<ol class="breadcrumb">
    <li><a href="~/usuario_tipo">Tipo de Restaurante</a></li>
    <li class="active">@(Model.tipo_restaurante_id > 0 ? Model.descripcion : "Nuevo Registro")</li>
</ol>

@using (Html.BeginForm("Guardar", "tipo_restaurante", FormMethod.Post, new
{
    id = "frm-categoria"

}))
{
    @Html.HiddenFor(x => x.tipo_restaurante_id)
    <div class="panel panel-default">
        <div class="panel-heading">Informacion del Tipo de Restaurante</div>
        <div class="panel-body">
            <div class="form-group">
                @Html.Label("ID:")
                @Html.TextBoxFor(x => x.tipo_restaurante_id, new { @class = "form-control", disabled = true })
            </div>
            <div class="form-group">
                @Html.Label("Descripcion:")
                @Html.TextBoxFor(x => x.descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.descripcion, null, new { @class = "label label-danger" })
            </div>
        </div>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Grabar</button>
        <a href="~/tipo_restaurante" class="btn btn-danger">Cancelar</a>
    </div>

}
@model List<ProyectoWeb2.Models.restaurante_tipo>
@{
    ViewBag.Title = "Index";
}

<h2 class="page-header"><a href="~/restaurante_tipo/Agregar" class="btn btn-default pull right">Nuevo Restaurante </a>Categoria Restaurante</h2>


@using (Html.BeginForm("Index", "restaurante_tipo", FormMethod.Post, new { criterio = "frm-buscar" }))

{
    <div class="text-left">
        @Html.Label("Buscar:")
        @Html.TextBox("Criterio")
        <button type="submit" class="btn btn-info" value="Buscar">Buscar</button>
    </div>
}
<table id="ejemplo2" class="table">
    <thead>
        <tr>
            <th style="width:50px">ID</th>
            <th style="width:50px">Restaurante</th>
            <th style="width:50px">Descripcion</th>          
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@(item.restaurante_tipo_id)</th>
                <th>@(item.restaurante.nombre)</th>
                <th>@(item.tipo_restaurante.descripcion)</th>               
                <th style="align-content:center;">                  
                    <a href="~/restaurante_tipo/Agregar/@item.restaurante_tipo_id" class="btn btn-warning">Modificar</a>
                    <a href="~/restaurante_tipo/eliminar/@item.restaurante_tipo_id" class="btn btn-danger" onclick="return confirm('¿Esta seguro de eliminar el registro?');">Eliminar</a>
                </th>
            </tr>
        }
    </tbody>
</table>
@model List<ProyectoWeb2.Models.mesa>
@{
    ViewBag.Title = "Index";
}

<h2 class="page-header"><a href="~/mesa/Agregar" class="btn btn-default pull right">Nueva Mesa</a>Mesa</h2>


@using (Html.BeginForm("Index", "mesa", FormMethod.Post, new { criterio = "frm-buscar" }))

{
    <div class="text-left">
        @Html.Label("Buscar:")
        @Html.TextBox("Criterio")
        <button type="submit" class="btn btn-info" value="Buscar">Buscar</button>
    </div>
}
<table id="ejemplo2" class="table">
    <thead>
        <tr>
            <th style="width:50px">ID</th>
            <th style="width:50px">Restaurante</th>
            <th style="width:100px">Estado</th>           
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@(item.mesa_id)</th>
                <th>@(item.restaurante.nombre)</th>
                <th>@(item.estado)</th>                
                <th style="align-content:center;">               
                    <a href="~/empresa/Agregar/@item.mesa_id" class="btn btn-warning">Modificar</a>
                    <a href="~/empresa/eliminar/@item.mesa_id" class="btn btn-danger" onclick="return confirm('¿Esta seguro de eliminar el registro?');">Eliminar</a>
                </th>
            </tr>
        }
    </tbody>
</table>
@model ProyectoWeb2.Models.mesa
@{
    ViewBag.Title = (Model.mesa_id > 0 ? Convert.ToString(Model.mesa_id) : "Nuevo Registro");
}

<h2>Agregar</h2>
<ol class="breadcrumb">
    <li><a href="~/Mesa">Mesa</a></li>
    <li class="active">@(Model.mesa_id > 0 ? Convert.ToString(Model.mesa_id) : "Nuevo Registro")</li>
</ol>

@using (Html.BeginForm("Guardar", "mesa", FormMethod.Post, new
{
    id = "frm-categoria"

}))
{
    @Html.HiddenFor(x => x.mesa_id)
    <div class="panel panel-default">
        <div class="panel-heading">Informacion de la Categoria</div>
        <div class="panel-body">
            <div class="form-group">
                @Html.Label("ID:")
                @Html.TextBoxFor(x => x.mesa_id, new { @class = "form-control", disabled = true })
            </div>
            <div class="form-group">
                @Html.Label("Estado:")
                @*@Html.TextBoxFor(x => x.estado, new { @class = "form-control" })*@
                <select name="Estado">
                    <option value="Activo">Activo</option>
                    <option value="Activo">Inactivo</option>
                </select>
            </div>
        </div>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Grabar</button>
        <a href="~/mesa" class="btn btn-danger">Cancelar</a>
    </div>

}


